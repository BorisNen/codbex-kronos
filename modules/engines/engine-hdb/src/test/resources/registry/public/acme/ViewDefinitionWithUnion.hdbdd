namespace acme;

@Schema: 'DBADMIN'

context ViewDefinitionWithUnion {

    define view employees_view_with_union as
        select from "acme::ViewDefinitionWithUnion.employees"
            join employee_roles as ER
                on "ER"."ID" = "acme::ViewDefinitionWithUnion.employees"."ID"
            join employee_salaries as ES
                on "ES"."ID" = "acme::ViewDefinitionWithUnion.employees"."ID"
        {
          "acme::ViewDefinitionWithUnion.employees"."ID" as "EmployeeId",
          "acme::ViewDefinitionWithUnion.employees"."NAME" as "EmployeeName",
          "ER"."TYPE" as "EmployeeRoleType",
          "ES"."AMOUNT" as "EmployeeSalary"
        }
        where "acme::ViewDefinitionWithUnion.employees"."NAME" = 'John'
        union
        select from DUMMY
        {
          0 as "EmployeeId",
          'Ben' as "EmployeeName",
          'Developer' as "EmployeeRoleType",
          '2200' as "EmployeeSalary"
        };
}